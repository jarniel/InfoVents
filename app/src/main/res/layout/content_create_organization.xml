<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_organization"
    tools:context="com.pseudocode.infovents.Activities.CreateOrganizationActivity"
    android:background="#fff"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperorgName"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Organization Name"
                android:inputType="textEmailAddress" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperorgDesc"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Organization Description"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperorgLocation"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Location"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperOrgEmail"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperOrgContact"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Contact"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperOrgLogo"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Organization Logo"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/wrapperOrgCoverImage"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <EditText
                android:id="@+id/orgCoverImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Cover Image"/>

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Industry"

                android:layout_gravity="center"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/spinner_label"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_gravity="center"
                android:entries="@array/country_arrays"
                android:prompt="@string/country_prompt"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:layout_gravity="center"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_label2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_gravity="center"
                android:entries="@array/country_arrays"
                android:prompt="@string/country_prompt"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnCreateOrg"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:text="Confirm"/>

    </LinearLayout>
</ScrollView>
